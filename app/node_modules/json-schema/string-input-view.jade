.form-group(ng-if = 'ctrl.active()')
  label.col-md-2.control-label(ng-if = 'ctrl.key')
    | {{ ctrl.property.title || ctrl.key }}
    span.text-warning(ng-if = 'ctrl.isRequired()') &nbsp;*
  div(ng-class = '{"col-md-10": ctrl.key, "col-md-12": !ctrl.key}')
    .col-md-5
      input.form-control(form = '{{ ctrl.form }}', type = '{{ ctrl.isPassword ? "password" : "text" }}', ng-model = 'ctrl.model', ng-required = 'ctrl.isRequired()')
    .col-md-5
      span.help-block(ng-bind-html = 'ctrl.property.description | md2html')