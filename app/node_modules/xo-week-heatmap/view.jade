div(ng-if = 'matrixLength > 0')
  table(style='border-spacing: 2px; border-collapse: separate; margin-bottom: 20px; width: 100%;')
    tr
      th
      th.text-center(ng-repeat = 'hour in hourLabels') {{hour}}
    tr(ng-repeat= '(day, hours) in matrix')
      th(style = 'border: none;') {{day}}
      td(
        ng-repeat = 'hour in hours track by hour.id'
        tooltip = '{{ hour.value !== null ? (hour.nb > 1 ? hour.filter(hour.value / hour.nb): hour.filter(hour.value)) : "no data" }} {{hour.dateTip && ("(" + hour.dateTip + ")") || ""}}'
        style = 'transition: background-color 300ms linear; width: 38px; height: 38px; padding: 1px; background-color: {{hour.color}}; border-radius: 4px;'
        )
  //- .legend
    .pull-left(ng-repeat = 'interval in intervals', style = 'width: 75px;')
        div(style = 'background-color: {{interval.color}}; height: 20px;')
          |    
        div(style = 'text-align: right; color: gray;') &gt;= {{interval.start}} 
